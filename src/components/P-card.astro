---
const { product } = Astro.props;
---

<a href={"single/" + product.id}>
  <article>
    <img src={product.image} alt={product.imagedescr} />
    <h2>{product.name}</h2>
    <p>kr. {product.price},-</p>
    <ul>
      {product.size.map((str) => <li>{str}</li>)}
    </ul>
  </article>
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
  article {
    padding: 1rem;
  }
</style>
